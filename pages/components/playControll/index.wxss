/* pages/components/playControll/index.wxss */
page{
  height: 100%
}
.page{
  height: 100%;
  /* width: 100%; */
  padding: 0px 10px;
  overflow-x: hidden;
  background: #888;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.musicLyrics{
  margin-top: 20px;
  width: 100%;
  height: 24rem;
  font-size: 14px;
  color: #eee;
  overflow-y: scroll;
  text-align: center;
  /* border-top-width: 2rem; */
}
.itemlist{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;

}
.itemlist :last-child{
  flex: 8
}
.noShow{
  display: none
}
.showTime{
  flex: 2;
  font-size: 10px;
  color: #ddd;
  display: flex;
}

.imagePage{
  display: flex;
  padding: 10px 0px;
  flex-direction: column;
  width: 100%;
  justify-content: center;
  text-align: center;
  align-items: center;
  color: white;
}
.title{
  margin-top: 1rem;
}
.author{
  font-size: 0.8rem;
}
.imagePage image{
  width: 12rem;
  height: 12rem;
  border-radius: 6rem;
  border: 0.3rem rgba(51, 33, 33, 0.638) solid;
  margin: 1.5rem 0rem;
}
.controllTool{
  margin-bottom: 10px;
}
.musicSlider{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.musicSlider text{
  font-size: 0.5rem;
  color: white;
  flex: 1;
}
.musicSlider slider{
  flex: 8;
}
.playing{
  background: red;
  color: white;
}
.paused{
  background: rgb(3, 168, 228);
  color: white;
}